- unless ENV["API_URL"] == "https://lightningnetwork.plus/api/2/"
  %p.bg-yellow-100.px-6.py-3.text-sm.font-light.text-center= icon("fas", "exclamation-circle", class: "mr-2") + "API DEV SERVER: " + ENV["API_URL"]
- if Rails.env.development?
  %p.bg-red-100.px-6.py-3.text-sm.font-light.text-center= icon("fas", "exclamation-circle", class: "mr-2") + "ENVIRONMENT: " + Rails.env
%p.bg-purple-900.px-6.py-3.text-purple-200.text-sm.font-light.text-center.hover:bg-purple-800
  %span Welcome to the offline version of LN+. For more features, check out the
  %span= link_to "online version.", "https://lightningnetwork.plus", class: "text-purple-400 hover:text-purple-200 font-normal"